# K3s Kubernetes Configuration

# Cluster Configuration
K3S_VERSION=stable
K3S_CLUSTER_NAME=arpansahu-k3s

# Portainer Agent Configuration
PORTAINER_AGENT_NAMESPACE=portainer
PORTAINER_AGENT_PORT=9001
PORTAINER_URL=https://portainer.arpansahu.space

# K3s Data Directory
K3S_DATA_DIR=/var/lib/rancher/k3s

# Disable Traefik (not needed for agent-only setup)
K3S_DISABLE_TRAEFIK=true
